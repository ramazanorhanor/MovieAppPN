
@{
    ViewData["Title"] = "Details";
}
@*@model MovieCategoryModel*@
@model Movie
<div class="row">
    <div class="col-md-3">
        @*@Html.Partial("_menu", Model.Categories)*@
        @*// _menu.cshtml yi bir viewCOmponent'e deönüştürdük '*@
        @await Component.InvokeAsync("CategoryMenu")

    </div>
    <div class="col-md-9">
        <div class="card mb-3">
            <div class="card-body">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="~/bootstrap/img/@Model.ImageUrl" alt="@Model.Description" class="card-img" />
                    </div>
                    <div class="col-md-8">
                        <h5 class="card-title">
                            <a asp-action="details" asp-controller="Home" asp-route-id="@Model.Id" > @Model.Name</a>
                        </h5>
                        <p class=" card-text">
                          @Html.Raw(Model.Description)
                        </p>
                        <p class="card-text">
                            <small class="text-muted"> 1 gün önce </small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
