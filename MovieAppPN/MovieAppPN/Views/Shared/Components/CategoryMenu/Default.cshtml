

@model IEnumerable<Category>
<a href="/"  class="list-group-item list-group-item-action">Tüm Kategoriler  </a>
<div class="list-group">
    @foreach (var CategoryItem in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-id="@CategoryItem.Id"
           class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==CategoryItem.Id.ToString()?"active":"")">@CategoryItem.Name  </a>
    }
</div>